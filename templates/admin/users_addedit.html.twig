{% extends "admin/master.html.twig" %}

{% block title %}Edit User
{% endblock %}

{% block head %}
	<link rel="stylesheet" href="/styles/addDestinations.css">
	<script src="scripts/nav.js"></script>
	{{ parent() }}
{% endblock %}

{% block content %}

	{% if errorList %}
		<ul>
			{% for error in errorList %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	{% endif %}
	<section class="section p-5">
		<div class="container">

			<form class="form" method="POST">
				<h3>Edit User</h3>
				<div class="formContainer">
					User ID:
					<input class="title" type="text" name="id" value="{{user.id}}"><br/>
					User First Name:
					<input class="title" type="text" name="name" value="{{ user.firstName }}"/><br/>
                    User Last Name:
					<input class="title" type="text" name="name" value="{{ user.lastName }}"/><br/>
					User Email:
					<input class="title" type="text" name="name" value="{{ user.email }}"/><br>
					User Phone:
					<input class="title" type="text" name="email" value="{{user.phone_number}}"/><br/>
                    User Type:
                    <select name="type" id="type" value="{{ user.account_type }}">
                        <option>customer</option>
                        <option>manager</option>
                        <option>admin</option>
					</select>
                    <br>
					<p>Only provide password if you are changing it for this user</p>
					Password:
					<input class="title" type="password" name="password1"/><br/>
					Password (Confirmed):
					<input class="title" type="password" name="password2"/>
					<br/><br/>
					<div class="submitButtonBox">
						<input class="submitButton" type="submit" value="Submit">
					</div>
				</div>

			</form>

		</div>

	</section>
{% endblock content %}
