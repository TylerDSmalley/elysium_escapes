{% extends "admin/master.html.twig" %}

{% block title %}User List{% endblock %}

{% block head %}
<style>
.table, th, td{
     border: 1px solid black;
     padding: 15px;
     text-align: center;
}
.center{
    margin-left: auto;
    margin-right: auto;
}
</style>
{% endblock %}

{% block content %}

<table class="center">
<br/><br/><br/><br/><br/>
<tr><th>ID</th><th>First Name</th><th>Last Name</th><th>Email</th><th>Phone Number</th><th>User Type</th><th>Actions</th></tr>
{% for u in usersList %}
    <tr><td>{{u.id}}</td><td>{{u.first_name}}</td><td>{{u.last_name}}</td><td>{{u.email}}</td>
    <td>{{u.phone_number}}</td><td>{{u.account_type}}</td><td><a href="/admin/users/{{u.id}}/edit">Edit</a>&nbsp;
    <a href="/admin/users/{{u.id}}/delete">Delete</a></td></tr>
{% endfor %}    
</table>
{% endblock %}