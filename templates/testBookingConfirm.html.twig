{% extends "base.html.twig" %}
{% block title %}Booking Confirmed
{% endblock %}
{% block head %}
	<link rel="stylesheet" href="styles/bookingConfirm.css">
	{{ parent() }}
{% endblock %}

{% block content %}

<div class="parallax-1">
	<div class="caption">
		<span class="border">See you soon..</span>
	</div>
</div>

<section id="confirmed_container">
	<h2 id="h2_confirmed">Booking Confirmed!</h2>
	<p>One of our travel afficionadoes will contact you soon.</p>
	<p>A confirmation email will be sent to you shortly.</p>
	<div id="tableWrapper">
		<fieldset>
			<table class="flexTable">
				<caption style="caption-side: top;">Booking Summary</caption>
				<thead>
					<tr>
						<th>Destination |</th>
						<th> Adults |</th>
						<th> Children |</th>
						<th> Departure Date |</th>
						<th> Return Date</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{ bookingConfirm.destination_name }}</td>
						<td>{{ bookingConfirm.number_adults }}</td>
						<td>{{ bookingConfirm.number_children }}</td>
						<td>{{ bookingConfirm.departure_date }}</td>
						<td>{{ bookingConfirm.return_date }}</td>
					</tr>
				</tbody>
			</table><br><br>
			<table class="flexTable">
				<tr>
					<th>Hotel Name</th>
					<td>{{ bookingConfirm.hotel_name }}</td>
				</tr>
				<tr>
					<th> City</th>
					<td>{{ bookingConfirm.hotel_city }}</td>
				</tr>
				<tr>
					<th> Address</th>
					<td>{{ bookingConfirm.hotel_address }}</td>
				</tr>
			</table>
			<br>
			<table class="flexTable">
				<tr>
					<th> Total Amount ({{bookingConfirm.hotel_currency}})</th>
					<td>{{ bookingConfirm.price_hotel_currency }}</td>
				</tr>
				<tr>
					<th> Total Amount (CAD)</th>
					<td>{{ bookingConfirm.price_cad }}</td>
				</tr>
				<tr>
					<th> Confirmation #</th>
					<td>{{ bookingConfirm.booking_confirm }}</td>
				</tr>
			</table>
		</fieldset>
	</div>
</section>

<div class="parallax-1"></div>

{% endblock %}

{% block scripts %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

{% endblock %}