{% extends "master.html.twig" %}

{% block title %}Edit User{% endblock %}

{% block content %}

    {% if errorList %}
    <ul>
    {% for error in errorList %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}


<form method="POST">
    User ID: <input type="text" name="id" value="{{v.content}}"><br/>
    User Name: <input type="text" name="name"  value="{{ v.name }}"//><br/>
    User Email: <input type="text" name="name" value="{{ v.email }}"/><br>
    User Phone: <input type="text" name="email" value="{{v.phone}}"/><br/>
    <p>Only provide password if you are changing it for this user</p>
    Password: <input type="password" name="password1" /><br/>
    Password (Confirmed): <input type="password" name="password2" />
    <br/><br/>
    <input type="submit" value="Submit">
    </div></div>
</form>
{% endblock content %}